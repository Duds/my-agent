# Platform Security
API_KEY=your_platform_api_key_here
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Remote AI Models
# Standard key format starts with: sk-ant-api03-
ANTHROPIC_API_KEY=your_anthropic_key_here
MISTRAL_API_KEY=your_mistral_key_here
MOONSHOT_API_KEY=your_moonshot_key_here

# Local Model Role Mappings
OLLAMA_BASE_URL=http://localhost:11434
LOCAL_JUDGE_MODEL=llama3
LOCAL_PRIVACY_MODEL=hermes-roleplay
LOCAL_PRESENCE_MODEL=mistral

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# Optional: comma-separated Telegram user IDs to restrict access (empty = allow all)
# TELEGRAM_ALLOWED_USERS=123456789,987654321
# Optional: chat ID for proactive messages. Or run /setmychat in the bot.
# TELEGRAM_PRIMARY_CHAT_ID=123456789

# Slack (second channel, PBI-045). See docs/SLACK_SETUP.md
# SLACK_BOT_TOKEN=xoxb-your-bot-token
# SLACK_SIGNING_SECRET=your-signing-secret

# Logging
LOG_LEVEL=INFO

# Integrations & Storage
GOOGLE_CREDENTIALS_PATH=
VAULT_PATH=memory/vault.json
ENCRYPTION_KEY=

# MCP (Model Context Protocol) Servers
# Path to MCP server config (default: data/mcp_servers.json)
# MCP_CONFIG_PATH=data/mcp_servers.json
